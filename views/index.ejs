<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<header>
    <% include ./header %>
    
</header>

<main>

         <div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
      <br><br><center><h2>Search Your Address Now!</h2></center>
  <% if (e) { %>
            <div class="alert alert-danger"><strong>Error!</strong> 
            <%= e %></div>
        <% } %>
        <form method="get" action="/search">
        <input type="text" class="form-control input-lg" placeholder="Building Name / Street Name / Estate Name" name="id">
        <br/>
        <button type="submit" class="btn btn-primary btn-block btn-lg"><span class="glyphicon glyphicon glyphicon-search"> Search</span></button>
        </form></div>
  <div class="col-sm-3"></div>
</div> 
        
        <br><br>
    
</main>
<script>
$(function(){
    
    var btn = document.querySelector('.btn');
    
    btn.addEventListener("click", function() {
        btn.innerHTML = '<span class="glyphicon glyphicon glyphicon-time">'+ ' Loading...' +'</span>';
    }, false);
    
});
</script>
<footer>
    <% include ./footer %>
</footer>

</body>
</html>
